@model PhoneBook.Models.PersonModel

<div class="container">
    <div class="row">
        <div class="col">
            <h4>Do You want delete @Model.FirstName @Model.LastName?</h4>
            <p></p>
            <p>ID : @Html.DisplayFor(x => x.ID)</p>
            <p>First Name : @Html.DisplayFor(x => x.FirstName)</p>
            <p>Last Name : @Html.DisplayFor(x => x.LastName)</p>
            <p>Phone : @Html.DisplayFor(x => x.Phone)</p>
            <p>Email : @Html.DisplayFor(x => x.Email)</p>

            @using (Html.BeginForm("ConfirmRemove", "Person", new { id = Model.ID }, FormMethod.Post))
            {
                <button>Delete</button>
            }
            <p></p>
            @Html.ActionLink("Back", "Index", "Person")
        </div>
    </div>
</div>